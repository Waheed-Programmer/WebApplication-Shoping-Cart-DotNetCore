@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



    <div class="col-md-6 justify-content-center mt-3">

        <form id="registerForm" class="row" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-floating col-6 py-2">
                <input asp-for="Input.Name" class="form-control"  aria-required="true" />
                <label asp-for="Input.Name"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-floating col-6 py-2">
                <input asp-for="Input.Email" class="form-control" autocomplete="Email" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
             <div class="form-floating col-12 py-2">
                <input asp-for="Input.Address" class="form-control"  aria-required="true" />
                <label asp-for="Input.Address"></label>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
             <div class="form-floating col-6 py-2">
                <input asp-for="Input.City" class="form-control" aria-required="true" />
                <label asp-for="Input.City"></label>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
             <div class="form-floating col-6 py-2">
                <input asp-for="Input.State" class="form-control"  aria-required="true" />
                <label asp-for="Input.State"></label>
                <span asp-validation-for="Input.State" class="text-danger"></span>
            </div>
             <div class="form-floating col-6 py-2">
                <input asp-for="Input.PinCode" class="form-control"  aria-required="true" />
                <label asp-for="Input.PinCode"></label>
                <span asp-validation-for="Input.PinCode" class="text-danger"></span>
            </div>
             <div class="form-floating col-6 py-2">
                <input asp-for="Input.Phon" class="form-control" aria-required="true" />
                <label asp-for="Input.Phon"></label>
                <span asp-validation-for="Input.Phon" class="text-danger"></span>
            </div>
            <div class="form-floating col-12 py-2">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating col-12 py-2">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
             <div class="form-floating col-12 py-2">
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary mt-2">Register</button>
            </div>
        </form>
