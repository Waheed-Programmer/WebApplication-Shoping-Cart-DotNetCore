@model MyApp.Models.ViewModel.CartVM


<section class="h-100" style="background-color: #eee;">
 
  <div class="container h-100 py-5">

    <div class="row d-flex justify-content-center align-items-center h-100">
       
        <div class="col-10">
        
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h3 class="fw-normal mb-0 text-black">Shopping Cart</h3>
          <div>
            <p class="mb-0"><span class="text-muted">Sort by:</span> <a href="#!" class="text-body">price <i
                  class="fas fa-angle-down mt-1"></i></a></p>
          </div>
        </div>
                 
        @foreach (var item in Model.ListOfCart)
        {
        <div class="card rounded-3 mb-4">
          <div class="card-body p-4">
            <div class="row d-flex justify-content-between align-items-center">
              <div class="col-md-2 col-lg-2 col-xl-2">
                <img src="@item.Product.ImgUrl"
                  class="img-fluid rounded-3" alt="Cotton T-shirt">
              </div>
              <div class="col-md-3 col-lg-3 col-xl-3">
                <p class="lead fw-normal mb-2">@item.Product.ProductName</p>
                <p><span class="text-muted">Category: </span></p>
              </div>
              <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                
                <a asp-action="Plus" asp-route-id="@item.Id" asp-controller="Cart" class="btn btn-link px-2">
                  <i class="bi bi-dash-circle-fill"></i>
                </a>               

                <a asp-action="Minus" asp-route-id="@item.Id" asp-controller="Cart" class="btn btn-link px-2">
                <i class="bi bi-plus-circle-fill"></i>
                </a>
              </div>
               <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                <h5 class="mb-0">$@item.Product.Price.ToString("0.00")</h5>X <h5 class="mb-0">@item.Count</h5>
              </div>
              <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                <a asp-action="Delete" asp-route-id="@item.Id" asp-controller="Cart" class="text-danger"><i class="bi bi-trash bi-lg"></i></a>
              </div>
            </div>
          </div>
        </div>
        }
        
        <div class="card mb-4">
          <div class="card-body p-4 d-flex flex-row">
           <div class="form-outline flex-fill">
               <label class="form-label">Total(USD)</label>
           </div>
               <label class="ms-3">@Model.Total.ToString("c")</label>

            </div>
          </div>
           
           <div class="card mb-4">
          <div class="card-body p-4 d-flex flex-row">
           <div class="form-outline flex-fill">
          <button type="button" class=" w-100 btn btn-primary btn-block btn-lg">Proceed to Pay</button>

           </div>            

            </div>
          </div>
        </div>       
       
         
  </div>
  
 
  </div>
  
   
</section>